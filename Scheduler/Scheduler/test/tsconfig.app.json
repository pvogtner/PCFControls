{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "node", // Use "node" for best compatibility
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "esModuleInterop": true,
    "types": [
      "vite/client",
      "node"
    ]
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "exclude": [
    "../../out",
    "../../node_modules"
  ]
}